{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GenerateOutfitsResult",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "outfits"
  ],
  "properties": {
    "outfits": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "rank",
          "items",
          "explanation",
          "confidence"
        ],
        "properties": {
          "rank": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "item_id",
                "role"
              ],
              "properties": {
                "item_id": {
                  "type": "string"
                },
                "role": {
                  "type": "string"
                }
              }
            }
          },
          "explanation": {
            "type": "string"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    }
  }
}