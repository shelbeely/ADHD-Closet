# Database
DATABASE_URL="postgresql://wardrobe:wardrobe_dev_password@localhost:5432/wardrobe_closet"

# Redis
REDIS_URL="redis://localhost:6379"

# OpenRouter AI
OPENROUTER_API_KEY="your-openrouter-api-key-here"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"

# Optimal configuration:
# Image generation model - REQUIRED for color variations and image-to-image features
# Options: 'black-forest-labs/flux-1.1-pro' (recommended), 'openai/dall-e-3', 'stability-ai/stable-diffusion-xl'
OPENROUTER_IMAGE_MODEL="black-forest-labs/flux-1.1-pro"

# Vision model - BEST for item analysis, OCR, and detail detection
OPENROUTER_VISION_MODEL="google/gemini-2.0-flash-exp:free"

# Text model - FAST and cost-effective for outfit generation and text
OPENROUTER_TEXT_MODEL="google/gemini-2.0-flash-exp:free"

# File Storage
DATA_DIR="./data"

# App
PUBLIC_BASE_URL="http://localhost:3000"
NODE_ENV="development"

# Optional: Disable AI processing (app remains usable manually)
AI_ENABLED="true"
