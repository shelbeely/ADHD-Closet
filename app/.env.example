# Database
DATABASE_URL="postgresql://wardrobe:wardrobe_dev_password@localhost:5432/wardrobe_closet"

# Redis
REDIS_URL="redis://localhost:6379"

# OpenRouter AI
OPENROUTER_API_KEY="your-openrouter-api-key-here"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"

# Optimal configuration:
# Image generation model - REQUIRED for color variations and image-to-image features
OPENROUTER_IMAGE_MODEL="google/gemini-3-pro-image-preview"

# Vision model - BEST for item analysis, OCR, and detail detection
OPENROUTER_VISION_MODEL="google/gemini-3-pro-preview"

# Text model - FAST and cost-effective for outfit generation and text
OPENROUTER_TEXT_MODEL="google/gemini-3-flash-preview"

# File Storage
DATA_DIR="./data"

# App
PUBLIC_BASE_URL="http://localhost:3000"
NODE_ENV="development"

# Optional: Disable AI processing (app remains usable manually)
AI_ENABLED="true"

# ============================================================================
# MULTI-USER & HOSTED VERSION CONFIGURATION
# ============================================================================

# Deployment Mode
# "self_hosted" - Single user, no auth, local only
# "hosted" - Multi-user with authentication and analytics
DEPLOYMENT_MODE="self_hosted"

# Authentication (NextAuth.js)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional, for hosted mode)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"
# GITHUB_CLIENT_ID="your-github-client-id"
# GITHUB_CLIENT_SECRET="your-github-client-secret"

# Analytics & Data Collection (hosted mode only)
ANALYTICS_ENABLED="false"  # Enable analytics tracking
ANONYMIZE_IP="true"        # Hash IP addresses for privacy

# Subscription & Billing (hosted mode only)
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_PUBLISHABLE_KEY="pk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."
SUBSCRIPTION_ENABLED="false"

# Ad Integration (for ad-supported tier)
AD_NETWORK_ENABLED="false"
# AD_NETWORK_ID="your-ad-network-id"
# AD_PUBLISHER_ID="your-publisher-id"

# Privacy & Compliance
# Default privacy settings for new users
DEFAULT_ANALYTICS_OPT_IN="false"
DEFAULT_DATA_SHARING="opt_out"
DEFAULT_AD_CONSENT="false"

# Feature Flags
ENABLE_USER_REGISTRATION="false"  # Allow new user signups (hosted mode)
ENABLE_DATA_EXPORT="true"         # GDPR compliance - always enabled
ENABLE_ACCOUNT_DELETION="true"    # GDPR compliance - always enabled

